<div class="container-fluid">
    <div class="row-fluid">
        <div class="span4"></div>
        <div id="span4">
            <h3>{{currentUser}}</h3>
            Kyte: <input type="text" ng-model="kyte" placeholder="Kyte" />

            <div class="btn btn-primary" ng-click="sendKyte(kyte)"><span class="glyphicon glyphicon-envelope">send</span></div>
            <table class="table table-responsive">

                <tr ng-repeat="x in gotKytes | orderBy: 'Date'">
                    <td>{{x.User}}</td>
                    <td>{{x.Kyte}}</td>
                </tr>
            </table>
        </div>

    </div>
</div>